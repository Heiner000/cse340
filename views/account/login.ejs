<%# Content Heading %>
    <% if (title) { %>
        <h1>
            <%= title %>
        </h1>
        <% } else { res.redirect('/') } %>

            <%# Message display %>
                <%- messages() %>

                    <%# Errors display %>
                        <% if (errors) { %>
                            <ul class="notice">
                                <% errors.array().forEach(error=> { %>
                                    <li>
                                        <%= error.msg %>
                                    </li>
                                    <% }) %>
                            </ul>
                            <% } %>

                                <%# Main content %>
                                    <div class="form-container">
                                        <form action="/account/login" id="loginForm" method="post">
                                            <div class="form-group">
                                                <label for="account_email">Email:</label>
                                                <input type="email" id="account_email" name="account_email" required
                                                    value="<%= locals.account_email %>">
                                            </div>

                                            <div class="form-group">
                                                <label for="account_password">Password:</label>
                                                <div class="password-input-group">
                                                    <input type="password" id="account_password" name="account_password"
                                                        required
                                                        pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
                                                    <button type="button" id="showPassword"
                                                        class="show-password">Show</button>
                                                </div>
                                                <div class="password-requirements">
                                                    Password must be:
                                                    <ul>
                                                        <li>At least 12 characters long</li>
                                                        <li>Contain at least 1 capital letter</li>
                                                        <li>Contain at least 1 number</li>
                                                        <li>Contain at least 1 special character</li>
                                                    </ul>
                                                </div>
                                            </div>

                                            <button class="form-button" type="submit">LOGIN</button>
                                        </form>

                                        <div class="signup-link">
                                            <p>No account? <a href="/account/register">Sign-Up</a></p>
                                        </div>
                                    </div>