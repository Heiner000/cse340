<%# Content Heading %>
    <% if (title) { %>
        <h1>
            <%= title %>
        </h1>
        <% } else { res.redirect('/') } %>

            <%# Message display %>
                <%- messages() %>

                    <%# Errors display %>
                        <% if (errors) { %>
                            <ul class="notice">
                                <% errors.array().forEach(error=> { %>
                                    <li>
                                        <%= error.msg %>
                                    </li>
                                    <% }) %>
                            </ul>
                            <% } %>

                                <%# Main Content %>
                                    <p>You're logged in!</p>