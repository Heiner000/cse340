<%# Content Heading %>
    <% if (title) { %>
        <h1>
            <%= title %>
        </h1>
        <% } else { res.redirect('/') } %>

            <%# Message display %>
                <%- messages() %>

                    <%# Errors display %>
                        <% if (errors) { %>
                            <ul class="notice">
                                <% errors.array().forEach(error=> { %>
                                    <li>
                                        <%= error.msg %>
                                    </li>
                                    <% }) %>
                            </ul>
                            <% } %>

                                <%# Main Content %>
                                    <% if (locals.accountData) { %>
                                        <h2>Welcome <%= locals.accountData.account_firstname %>
                                        </h2>

                                        <%# Update Account Link - shown for all users %>
                                            <p><a href="/account/update/<%= locals.accountData.account_id %>"
                                                    title="Click to update account information">Update Account
                                                    Information</a></p>

                                            <%# Inventory Management - only for Employee/Admin %>
                                                <% if (locals.accountData.account_type==="Employee" ||
                                                    locals.accountData.account_type==="Admin" ) { %>
                                                    <h3>Inventory Management</h3>
                                                    <p><a href="/inv/" title="Click to manage inventory">Manage
                                                            Inventory</a></p>
                                                    <% } %>
                                                        <% } %>