<%# Content Heading %>
    <% if (title) { %>
        <h1>
            <%= title %>
        </h1>
        <% } else { res.redirect('/') } %>

            <%# Message display placeholder %>
                <%# messages() %>

                    <%# Main content %>
                        <div id="vehicle-detail">
                            <!-- ! ENHANCEMENTS -->
                            <div class="vehicle-actions">
                                <% if (locals.comparisonList?.includes(vehicle.inv_id)) { %>
                                    <form action="/inv/compare/remove" method="POST">
                                        <input type="hidden" name="inv_id" value="<%= vehicle.inv_id %>">
                                        <button type="submit" class="btn btn-remove">Remove from Comparison</button>
                                    </form>
                                    <% } else { %>
                                        <form action="/inv/compare/add" method="POST">
                                            <input type="hidden" name="inv_id" value="<%= vehicle.inv_id %>">
                                            <button type="submit" class="btn btn-add">Add to Comparison</button>
                                        </form>
                                        <% } %>

                                            <% if (locals.comparisonList?.length>= 2) { %>
                                                <a href="/inv/comparison?vehicles=<%= locals.comparisonList.join(',') %>"
                                                    class="btn btn-compare">Compare Selected Vehicles</a>
                                                <% } %>
                            </div>
                            <div class="detail-container">
                                <div class="detail-img">
                                    <img src="<%= vehicle.inv_image %>"
                                        alt="<%= vehicle.inv_make %> <%= vehicle.inv_model %>" class="detail-img">
                                </div>

                                <!-- veh info section -->
                                <div class="detail-info">
                                    <div class="price-mileage">
                                        <div class="price">
                                            <span class="label">Price:</span>
                                            <span class="value">$<%= new
                                                    Intl.NumberFormat('en-US').format(vehicle.inv_price) %></span>
                                        </div>
                                        <div class="mileage">
                                            <span class="label">Mileage:</span>
                                            <span class="value">
                                                <%= new Intl.NumberFormat('en-US').format(vehicle.inv_miles) %>
                                            </span>

                                        </div>
                                    </div>

                                    <div class="vehicle-specs">
                                        <div class="spec-item">
                                            <span class="label">Make:</span>
                                            <span class="value">
                                                <%= vehicle.inv_make %>
                                            </span>
                                        </div>
                                        <div class="spec-item">
                                            <span class="label">Model:</span>
                                            <span class="value">
                                                <%= vehicle.inv_model %>
                                            </span>
                                        </div>
                                        <div class="spec-item">
                                            <span class="label">Year:</span>
                                            <span class="value">
                                                <%= vehicle.inv_year %>
                                            </span>
                                        </div>
                                        <div class="spec-item">
                                            <span class="label">Color:</span>
                                            <span class="value">
                                                <%= vehicle.inv_color %>
                                            </span>
                                        </div>
                                    </div>

                                    <div class="vehicle-description">
                                        <span class="label">Description:</span>
                                        <p class="value">
                                            <%= vehicle.inv_description %>
                                        </p>
                                    </div>
                                </div>
                            </div>

                        </div>