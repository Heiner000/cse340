<%# Content Heading %>
    <% if (title) { %>
        <h1>
            <%= title %>
        </h1>
        <% } else { res.redirect('/') } %>

            <%# Message display placeholder %>
                <%# messages() %>

                    <%# Main content %>
                        <div id="vehicle-detail">
                            <div class="detail-container">
                                <div class="detail-img">
                                    <img src="<%= vehicle.inv_image %>"
                                        alt="<%= vehicle.inv_make %> <%= vehicle.inv_model %>" class="detail-img">
                                </div>

                                <!-- veh info section -->
                                <div class="detail-info">
                                    <div class="price-mileage">
                                        <div class="price">
                                            <span class="label">Price:</span>
                                            <span class="value">$<%= new
                                                    Intl.NumberFormat('en-US').format(vehicle.inv_price) %></span>
                                        </div>
                                        <div class="mileage">
                                            <span class="label">Mileage:</span>
                                            <span class="value">
                                                <%= new Intl.NumberFormat('en-US').format(vehicle.inv_miles) %>
                                            </span>

                                        </div>
                                    </div>

                                    <div class="vehicle-specs">
                                        <div class="spec-item">
                                            <span class="label">Make:</span>
                                            <span class="value">
                                                <%= vehicle.inv_make %>
                                            </span>
                                        </div>
                                        <div class="spec-item">
                                            <span class="label">Model:</span>
                                            <span class="value">
                                                <%= vehicle.inv_model %>
                                            </span>
                                        </div>
                                        <div class="spec-item">
                                            <span class="label">Year:</span>
                                            <span class="value">
                                                <%= vehicle.inv_year %>
                                            </span>
                                        </div>
                                        <div class="spec-item">
                                            <span class="label">Color:</span>
                                            <span class="value">
                                                <%= vehicle.inv_color %>
                                            </span>
                                        </div>
                                    </div>

                                    <div class="vehicle-description">
                                        <span class="label">Description:</span>
                                        <p class="value">
                                            <%= vehicle.inv_description %>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>